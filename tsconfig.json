{
  "compilerOptions": {
    "target": "es2020",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "module": "NodeNext",
    "rootDir": ".",
    "moduleResolution": "nodenext",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@config/*": ["./src/config/*"],
      "@shared/*": ["./src/shared/*"],
      "@modules/*": ["./src/modules/*"],
      "@prisma/client": ["./prisma/generated/client"]
    },
    "typeRoots": ["./node_modules/@types"],
    "resolveJsonModule": true,
    "maxNodeModuleJsDepth": 0,
    "sourceMap": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*", "shared/types/**/*.d.ts", "tests/**/*"],
  "exclude": ["node_modules", "dist", "prisma", "node_modules/.prisma"]
}
